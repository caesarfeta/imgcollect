<%# Hash the collection been CITEified %>
<% citeified = CiteHelper.exists?( @col ) %>

<div class="row collection-box">
	
	<%# IMAGES %>
	<div class="columns small-12 medium-4 samples">
		<% if @col.has_key?(:images) %>
			<% @col[:images].each do | urn | %>
			<% img = imgPreview( urn ) %>
			<img src="<%= img %>" />
			<% end %>
		<% end %>
		<div class="clearfix"></div>
	</div>
	
	<%# METADATA %>
	<div class="columns small-8 medium-6 metadata">
		
		<%# NAME %>
		<h2 class="name"><%= @col[:name] %></h2>
		
		<%# CITE LINK %>
		<% if citeified == true  %>
		<div class="cite_urn">
			<a href="collection/report/<%= @col[:cite_urn].urn_to_path %>"><%= @col[:cite_urn] %></a>
		</div>
		<img class="citeified" src="/img/check.svg" />
		<% end %>
		
		<%# COUNTS %>
		<h3 class="value-count"><span class="n"><%= count( @col[:images] ) %></span> images</h3>
		
		<%# KEYWORDS %>
		<% if @col.has_key?( :keywords ) && @col[:keywords].length > 0 %>
		<div class="keywords">
			<% @col[:keywords].each do |keyword| %>
			<a href="" class="keyword"><%= keyword %></a>
			<% end %>
		</div>
		<% end %>
		
		<%# DATES %>
		<div class="date-person">
			<h3 class="header">Last Updated</h3>
			<h3 class="date"><%= readTime( @col[:edited] ) %></h3>
		</div>
		<div class="date-person">
			<h3 class="header">Created</h3>
			<h3 class="date"><%= readTime( @col[:created] ) %></h3>
		</div>
		
	</div>
	
	<%# ACTIVATE %>
	<div class="columns small-4 medium-2">
		<% if citeified == false %>
		<a data-urn="<%= @col[:urn] %>" class="button secondary tiny dark activate">Select</a>
		<a data-urn="<%= @col[:urn] %>" class="button secondary tiny dark citeify">CITEify</a>
		<% end %>
	</div>
</div>